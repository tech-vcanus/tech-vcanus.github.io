<h2 id="use">Use</h2>
<div class="highlighter-rouge"><div class="highlight"><pre class="highlight"><code>@Log4j2
public class TempClass{
    
    public tempMethod(){
        log.debug("debug level");
        log.info("info level");
        log.warn("warn level");
        log.error("error level");
    }
}
</code></pre></div></div>
